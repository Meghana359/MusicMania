<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/songTitle" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/artistImage"
            android:layout_height="@dimen/artistImage"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin" />

        <ImageView
            android:id="@+id/playSong"
            android:layout_width="@dimen/playSongButton"
            android:layout_height="@dimen/playSongButton"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:scaleType="fitXY"
            android:src="@drawable/play_image" />
    </LinearLayout>

</ScrollView>